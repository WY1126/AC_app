}
.imgs-more .item-addimg{
  width: 220rpx;
  background-color: rgba(190, 189, 189, 0.63);
  text-align: center;
  padding: 80rpx 0;
  display: inline-block;
  vertical-align: top;
}

.imgs-more .item-addimg image{
  width: 60rpx;
  height: 60rpx;
}
.file-box{
  display: inline-block;
}
.file-box .img-box{
  /* max-width: 32%; */
  width: 220rpx;
  height: 220rpx;
  position:relative;
  /* border: 1rpx solid #bfa; */
  margin-right: 10rpx;
  /* display: inline-block; */
}
.file-box .img-box .remove-icon{
  position: absolute;
  right: 10rpx;
  top: 10rpx;
}
.file-box .img-box image{
  width: 100%;
  height: 100%;
}
.imgs-more .file-box.deleting{
  animation: deleting 0.5s ease;
  animation-fill-mode: forwards;
}

@keyframes deleting{
  0%{
    transform: scale(1);
  }
  100%{
    transform: scale(0);
  }
}
