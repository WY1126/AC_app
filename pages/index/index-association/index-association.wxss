/* pages/index/index-association/index-association.wxss */
@import "./index-association.skeleton.wxss";
page{
  background-color:#f0f0f0;
}
.head{
  display: flex;
  flex-direction: row;
  align-items: center;
  width: 100%;
  height: 72rpx;
  background-color: rgb(255, 255, 255);
  margin-top: 15px;
}
.head > text {
  color: #666666;
  font-size: 26rpx;
}
.shuxian{
  width: 6rpx;
  height: 40rpx;
  background-color: #479EDF;
  border-radius: 6rpx 0 0 6rpx;
  margin-left: 28rpx;
  margin-right: 14rpx;
}
/* 隐藏滚动条 */
::-webkit-scrollbar {
  width: 0;
  height: 0;
  color: transparent;
  display: none;
}

.nuntip{
  color: #666666;
  font-size: 24rpx;
   /* line-heigth: 160rpx; */
   margin-left:10px;
   line-height: 136rpx;
   margin-top: 10px;
}
.ml_box{
  display: flex;
  flex-direction: column;
  /* justify-items: center; */
  align-items: center;
  margin-right: 15px;
}
.ml_box > image{
  width: 88rpx;
  height: 88rpx;
  border-radius: 8rpx;
  margin-bottom: 7px;
}
.ml_box > text {
  font-size: 24rpx;
  color: #666666;
}
.ml_ass_box{
  /* width: 100%; */
  display: flex;
  flex-direction: row;
  align-items: center;
  padding: 0 0 0 14px;
}
.countnum{
  color: #666666;
  font-size: 26rpx;
  margin: 5px 0 20px 10px;
  /* margin-left: 10px;
  margin-bottom: 20px; */
}
.alllist{
  width: 710rpx;
  margin: 0 auto;
  /* width: 100%; */
  /* padding-left: 10px;
  padding-right: 10px; */
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  justify-content: space-between;
}
.al_box{
  width: 330rpx;
  height: 125rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  background-color: #ffffff;
  border-radius: 4px;
  margin-bottom: 30rpx;
  position: relative;


  /* border-radius: 17px; */
  background: #ffffff;
  box-shadow:  10px 10px 20px #c9c9c9,
             -10px -10px 20px #ffffff;
}
.al_box > image{
  width: 94rpx;
  height: 94rpx;
  border-radius: 50%;
  /* margin-left: 5px;
  margin-right: 25rpx; */
  position: absolute;
  left: 10px;
}
.al_box > text {
  color: #666666;
  font-size: 26rpx;
  /* margin-left: 10px; */
  position: absolute;
  right: 30px;
}