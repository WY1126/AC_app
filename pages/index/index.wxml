<!--index.wxml-->    
<van-tabs active="{{ active }}"  bind:change="onChange" line-height="2px" color="#48A8F1" title-active-color="#48A8F1" sticky animated swipeable>
    <!-- <van-tab title="课余小驿">
      课余小驿
    </van-tab> -->
    <van-tab title="江中强档" >
    <view class="container_a">
      <!-- 顶部按钮格子 -->
      <view class="grid_a">
        <view class="grid_a_item">
           <image mode="aspectFit" src="/images/icon/tips.png"></image>
           <text>校园贴士</text>
        </view>
        <view class="grid_a_item">
          <image mode="aspectFit" src="/images/icon/association.png"></image>
          <text>社团协会</text>
        </view>
        <view class="grid_a_item">
          <image mode="aspectFit" src="/images/icon/news.png"></image>
          <text>校区新闻</text>
        </view>
        <view class="grid_a_item">
          <image mode="aspectFit" src="/images/icon/address_list.png"></image>
          <text>校园通讯录</text>
        </view>
      </view>
      <view class="infor_con">
            <view class="infor_top">
              <view class="tip"></view>
              <text>社团资讯</text>
            </view>
            <view class="infor_item">
              <block>
                <view wx:for="{{list}}" wx:for-item="item" wx:key="id">
                  <view class="infor_item_top">
                    <image class="infor_item_avatar" src="{{item.avatarurl}}"></image> 
                    <text class="infor_item_name">{{item.shortname}}</text>
                    <text class="infor_item_time">{{item.create_time}}</text>
                  </view>
                  <view class="infor_item_detail">
                    <rich-text>{{item.content}}</rich-text>
                      <view wx:for="{{item.image}}" wx:for-item="image_item" wx:key="id">
                        <image class="list_image" src="http://127.0.0.1/AC_tp/uploads/{{image_item}}"></image>
                      </view>
                    
                  </view>
                  
                </view>
              </block>
            </view>
        </view>
      </view>

    </van-tab>
    <van-tab title="知识主打">
    <text>sadas</text>
    知识主打
    <image src="http://127.0.0.1/AC_tp/uploads/20201205/060d5e55d023b0bf7a5c950c85548446.png"></image>
    </van-tab>
  </van-tabs>

