.infor_item_top{
  width: 100%;
  margin: 0 auto;
  display: flex;
  flex-direction: row;
  /* justify-content: space-between; */
  align-items: center;
  margin-top: 5px;
}
.infor_item_avatar{
  width: 70rpx;
  height: 70rpx;
  border-radius: 10%;
  overflow:hidden;
  margin-left: 25rpx;
}
.infor_item_top_text{
  margin-left: 10rpx;
  width: 75%;
  display: flex;
  flex-direction: column;
}
.infor_item_top_type{
  font-size: 13px;
  color: #888888;
  position: absolute;
  right: 20rpx;
}
.infor_item_name{
  font-size: 13px;
  color: #333333;
}
.infor_item_time{
  font-size: 10px;
  color: #888888;
  margin-top: 6rpx;
}
.infor_item_top_icon{
  width: 40rpx;
  height: 40rpx;
}
.infor_item_detail{
  width: 85%;
  height: auto;
  margin-top: 10rpx;
  left: 89rpx; 
  margin-left: 13%;
  word-break:break-all; /*数字字母换行*/
}
.infor_item_detail > text{
  font-size: 13px;
  color: #666666;
}
.image_box{
  width: 100%;
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  margin-top: 10rpx;
  flex-wrap: wrap;
  margin-top: 15px;
}
.list_image{
  width: 200rpx;
  height: 200rpx;
  margin-right: 10rpx;
}
.infor_item_like{
  width: 100%;
  border-bottom:solid 24rpx #f0f0f0;
  margin-top: 5px;
}
.infor_item_like_box{
  width: 620rpx;
  height: auto;
  margin-top: 5px;
  margin-left: 89rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
}
.like_icon_box1{
  margin-right: 40rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
}
.like_icon_box2{
  margin-right: 0rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
}
.infor_item_like_box text{
  color: #8a8a88;
  font-size: 12px;
  display: inline-block;
  line-height: 35rpx;
  margin-left: 3px; 
}
.infor_item_icon{
  width: 40rpx;
  height: 40rpx;
}