/* pages/user/notify/notify.wxss */
page{
  background-color:#f0f0f0;
  color: #333333;
  font-size: 13px;
}
.liubai{
  width: 100%;
  height: 15px;
  background-color: #f0f0f0;
}
.notify_box{
  width: 100%;
  background-color: #ffffff;
  padding: 10px 10px 0px 10px;
  margin-top: 10px;
  /* position: relative; */
}

.head{
  display: flex;
  flex-direction: row;
}
.a{
  width: 100%;
  height: 60rpx;
  /* background-color: #bfa; */
}
.head > image{
  width: 70rpx;
  height: 70rpx;
  border-radius: 50%;
}
.head_infor{
  margin-left: 10px;
}
.head_infor_nt{
  display: flex;
  flex-direction: row;
  align-items: center;
}
.tag{
  width: 70rpx;
  /* height: 36rpx; */
  background-color: #8799A3;
  color: #ffffff;
  line-height: 40rpx;
  text-align: center;
  font-size: 10px;
  margin-left: 10px;
  border-radius: 8rpx;
}
.content{
  margin-top: 10px;
  font-size: 13px;
  color: #666666;
}
.middle{
  color: #666666;
  line-height: 40rpx;
  border-left: 4rpx solid #479EDF;
  padding-left: 6px;
  margin: 10px 0 0px 0;
  font-size: 13px;
  /* height: ; */
}
.middle:active{
  color: #666666;
  line-height: 40rpx;
  border-left: 4rpx solid #479EDF;
  padding-left: 6px;
  margin: 10px 0 0px 0;
  font-size: 13px;
  /* height: ; */
  background-color: #f5f5f5;

}
.create_time{
  line-height: 30px;
  display: inline-block;
  position:absolute;
  right: 10px;
  font-size: 10px;
  color: #666666;
}
.del_notify{
  width:65px;
  height:100%;
  background-color:#EE0A24;
  /* text-align:center; */
  /* line-height: 100%; */
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  color: #f5f5f5;
  font-size: 13px;
}